{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "outDir": "./dist",
        "baseUrl": "./src",
        "sourceMap": true,
        "allowJs": false,
        "moduleResolution": "Node",
        "strict": true,
        "declaration": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "typeRoots": ["../../node_modules/@types"],
        "alwaysStrict": true
    }
}